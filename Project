from tkinter import*
import tkinter.font as font
import tkinter as tk
from tkinter import ttk

#screen
Terena= tk.Tk()
Terena.geometry=("1920x1080")
Terena.title("Terena")

f=font.Font(family='Times New Roman')

#Label
Save=ttk.Label(Terena, text="Save")
Save["font"]=f
Save.grid(row=0,column=0)

Title=ttk.Label(Terena, text="Hello")
Title["font"]=f
Title.grid(row=0,column=5)

New_tasks=ttk.Label(Terena, text="New tasks")
New_tasks["font"]=f
New_tasks.grid(row=2, column=0)

Due_date=ttk.Label(Terena, text="Due date")
Due_date["font"]=f
Due_date.grid(row=2, column=1)

#Function
#def add():


#button=ttk.Button(Terena, text="Add task", command=add)

Terena.mainloop()


